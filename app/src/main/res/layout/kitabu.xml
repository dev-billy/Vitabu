<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_kitabu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <ImageView
        android:id="@+id/row_book_ico"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/ic_book_black_24dp" />
    <View android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_width="1dp"
        android:background="@color/colorPrimaryDark"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/row_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="23sp" />
        <TextView
            android:id="@+id/row_book_author_palceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_book_title"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:text="Author : "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/row_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/row_book_author_palceholder"
            android:layout_below="@+id/row_book_title"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/row_book_date_palceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/row_book_author"
            android:layout_below="@+id/row_book_title"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:text="Published Year : "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/row_book_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_book_title"
            android:layout_toRightOf="@+id/row_book_date_palceholder"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>