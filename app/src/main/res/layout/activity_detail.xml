<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    tools:context=".DetailActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:id="@+id/book_icon"
        android:paddingBottom="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_book_black_24dp"/>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="23sp"
        android:layout_toRightOf="@id/book_icon"
    android:layout_marginTop="15dp"
        android:textColor="@color/colorPrimaryDark"
    android:padding="5dp"
    android:id="@+id/kitabu_name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/book_icon"
        android:textSize="18sp"
        android:layout_below="@id/kitabu_name"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:id="@+id/kitabu_publish"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/book_icon"
        android:lineHeight="25dp"
        android:textColor="#000"
        android:layout_marginTop="45dp"
        android:padding="20dp"
        android:id="@+id/kitabu_description"/>

    <Button
        android:layout_width="match_parent"
        android:layout_below="@id/kitabu_description"
        android:background="@color/colorPrimary"
        android:layout_margin="30dp"
        android:id="@+id/buy_book_btn"
        android:text="BUY BOOK"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:textColor="@color/cardview_light_background"
        android:textSize="18dp"
        android:layout_height="wrap_content"/>



</RelativeLayout>
</ScrollView>